<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/life_feed_onboarding_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D111111"
    android:gravity="bottom">

    <android.support.v7.widget.CardView
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hint_swipe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="#F3F5F5F5"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="34dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/first_run_page6_title"
                android:textAlignment="center"
                android:textColor="@color/paletteLightBlack100"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/life_feed_onboarding_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.25"
                android:textAlignment="center"
                android:textColor="@color/paletteLightBlack100"
                android:textSize="14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/hint_swipe"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="hint_swipe.json"
        app:lottie_loop="true" />

</RelativeLayout>
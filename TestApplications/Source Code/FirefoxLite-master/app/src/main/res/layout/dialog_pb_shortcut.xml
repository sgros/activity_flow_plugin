<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/common_margin_m5"
    android:paddingRight="@dimen/common_margin_m5"
    android:paddingTop="@dimen/common_margin_m5"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_addtohome"
        android:backgroundTint="@color/paletteDarkGreyD100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/private_browsing_dialog_add_shortcut_title"
        android:textSize="16sp"
        android:textColor="@color/paletteDarkGreyD100"
        android:lineSpacingExtra="8sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

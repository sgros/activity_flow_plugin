<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="#dddddd">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/tab_tray_item_bg"/>
                    <stroke android:width="3dp" android:color="@color/tabTrayItemOutlineSelected"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/tab_tray_item_bg"/>
                    <stroke android:width="1dp" android:color="@color/tab_tray_item_outline_normal"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>

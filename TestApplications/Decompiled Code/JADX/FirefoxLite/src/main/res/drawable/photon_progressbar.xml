<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%" android:scaleHeight="100%" android:scaleGravity="top|bottom|left|center_vertical|fill_vertical|center_horizontal|center|start">
            <shape>
                <gradient android:startColor="?attr/colorProgressBarStartGradient" android:endColor="?attr/colorProgressBarStartGradient" android:centerColor="?attr/colorProgressBarEndGradient"/>
            </shape>
        </scale>
    </item>
</layer-list>

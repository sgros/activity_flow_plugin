<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:padding="20.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/latitude" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/latitude_d" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="3" android:layout_weight="2.0" android:inputType="numberDecimal|numberSigned" />
            <EditText android:id="@id/latitude_m" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="7" android:layout_weight="1.0" android:inputType="numberDecimal|numberSigned" />
        </LinearLayout>
        <TextView android:textStyle="bold" android:textColor="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/longitude" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/longitude_d" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="3" android:layout_weight="2.0" android:inputType="numberDecimal|numberSigned" />
            <EditText android:id="@id/longitude_m" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="7" android:layout_weight="1.0" android:inputType="numberDecimal|numberSigned" />
        </LinearLayout>
        <TextView android:textStyle="bold" android:textColor="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/zoomLevel" />
        <SeekBar android:id="@id/zoomLevel" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:textStyle="bold" android:gravity="center_horizontal" android:id="@id/zoomlevelValue" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>